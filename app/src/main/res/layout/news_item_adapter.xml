<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_large"
    android:paddingBottom="@dimen/spacing_large">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vNewsItemImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/vNewsItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/vNewsItemCreatedAt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/vNewsItemImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ali Connors" />

    <TextView
        android:id="@+id/vNewsItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/vNewsItemLikesImageView"
        app:layout_constraintStart_toEndOf="@+id/vNewsItemImageView"
        app:layout_constraintTop_toBottomOf="@+id/vNewsItemTitle"
        tools:text="I'll be in yours neighborhood doing errands..." />

    <TextView
        android:id="@+id/vNewsItemCreatedAt"
        android:layout_width="80dp"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vNewsItemImageView"
        tools:text="hace 3 aÃ±os" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vNewsItemLikesImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vNewsItemCreatedAt"
        app:srcCompat="@drawable/ic_like_off_large" />
</android.support.constraint.ConstraintLayout>